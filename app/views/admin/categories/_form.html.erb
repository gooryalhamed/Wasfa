<head>
	<%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<div class="container text_center">
	<%= form_for(@category, :url =>admin_category_path(@category)) do |f|%>
	<div class="row">
		<div class="col-sm-12" id="field">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12" class="btn">
			<%= f.submit :class=> 'btn btn-default' %>
			<% end %>

			<%= link_to 'Back', admin_categories_path ,:class=> 'btn btn-default' %>	
		</div>
	</div>
</div>
</div>