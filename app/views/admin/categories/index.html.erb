<head>
	<%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<div class="row">
<ul>
	<% @categories.each do |cat| %>
	<li><%= cat.name %>
		<%= link_to 'Edit', edit_admin_category_path(cat) %>
		<%= link_to 'Delete',admin_category_path(cat), method: :delete, data:{confirm:'Are you sure?'}%>
	</li>
	<% end %>
	<%= link_to 'New', new_admin_category_path %>
	<a href="/admin">Back to Panel</a>
</ul>
</div>
	