<div class="container text_center">
	<%= form_for(@food_recipe) do |f|%>
	<div class="row">
	<div class="col-sm-12" id="field">
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.text_field :origin %>
			<%= f.text_field :preparation_time %>
			<%= f.text_field :description %>
			<%= f.text_field :method %>
			<%= f.text_field :number_of_persons %>
			<%= f.text_field :ingredients %>
			<%= f.text_field :image_url %>
			
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12" id="btn">
			<%= f.submit :class=> 'btn btn-default' %>
		</div>
	</div>
	<% end %>
</div>