<div class="container wrapper">
	<div id="title">
		<span>RECIPE / ITEMS</span>
		<%= image_tag('items.png') %>
	</div>
	<% @recipes.each do |recipe| %>
	<div class="row">
		<div class="col-xs-2"><%= recipe.name %></div>
		<div class="col-xs-4">
			<%= link_to 'Edit', edit_admin_food_recipe_path(recipe) %>
			<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
			&emsp;&emsp;
			<%= link_to 'Delete',admin_food_recipe_path(recipe), method: :delete, data:{confirm:'Are you sure you want to delete this item?'}%>
			<i class="fa fa-times" aria-hidden="true"></i>
			&emsp;&emsp;
			<%= link_to 'view', admin_food_recipe_path(recipe) %>
			<i class="fa fa-eye" aria-hidden="true"></i>
		</div>
	</div>
	<% end %>
	<%= link_to 'New', new_admin_food_recipe_path, {:class=> "btn"} %>
	<a href="/admin" class="btn"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Back To Panel
	</a>
</div>
	