<header>
	<div class="row" id="first-row">
		<div class="col-xs-12" id="text">
			<h1>BEST RECIPES</h1>
			<p>You Will Find Here</p>
			<!-- search bar -->
			<input type="text" placeholder="search">
			<span>
				<i class="fa fa-search" aria-hidden="true"></i>  
			</span>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center">
			<h4 class="heading">RECENTLY ADDED</h4>
		</div>
	</div>
	<div class="row">
		<% FoodRecipe.order(created_at: :desc).each do |rec| %>
		<div class="col-sm-3 box">
			<%= image_tag("/uploads/#{rec.image}", :class=>"image") %>
		</div>
		<% end %>
	</div>
	<div class="row">
		<div class="col-xs-12 text-center">
			<h4 class="heading">MOST POPULAR</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-3 box"></div>
		<div class="col-sm-3 box"></div>
		<div class="col-sm-3 box"></div>
		<div class="col-sm-3 box"></div>
	</div>
</header>
