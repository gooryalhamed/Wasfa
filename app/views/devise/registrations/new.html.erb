<div id="title">
  <%= image_tag('lock.png') %>
  <span>Sign Up</span>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="row">
  <div class="col-xs-12">
    <%= f.text_field :username,placeholder:"Username", :class=>"input" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <%= f.email_field :email,placeholder:"E-Mail",:class=>"input" %>
  </div>
</div>
<% if @minimum_password_length %>
<em>(<%= @minimum_password_length %> characters minimum)</em>
<% end %><br />
<div class="row">
  <div class="col-xs-12">
    <%= f.password_field :password,placeholder:"Password", autocomplete: "off",:class=>"input" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <%= f.password_field :password_confirmation,placeholder:"Password Confirmation", autocomplete: "off",:class=>"input" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <%= f.submit "Sign up",:class=>"input submit" %>
  </div>
</div>
<% end %>
<div id="links">
  <%= render "devise/shared/links" %>
</div>
