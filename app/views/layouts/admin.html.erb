<!DOCTYPE html>
<html>
<head>
	<title>Admin Dashboard</title>
	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
	<div class="container">
		<div class="row">
			<div class="col-xs-12">
				<% if user_signed_in? %>
				<strong><%= current_user.username %></strong>
				<%= link_to "log out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
				<% end %>
			</div>
		</div>
		<div class="sidenav">
			<div id="home">
				<i class="fa fa-home" aria-hidden="true"></i>
				<a href="/admin">Home</a>
				<hr>
			</div>
			<div class="collapsed menu" data-toggle="collapse" data-target="#catlinks">
				<span>Category</span>
				<i class="fa fa-chevron-right" aria-hidden="true"></i>
			</div>
			<ul id="catlinks" class="collapse">
				<li><%= link_to 'All', admin_categories_path%></li>
				<li><%= link_to 'New', new_admin_category_path%></li>
			</ul>

			<div class="collapsed menu" data-toggle="collapse" data-target="#reclinks">
				<span>Recipe</span>
				<i class="fa fa-chevron-right" aria-hidden="true"></i>
			</div>
			<ul id="reclinks" class="collapse">
				<li><%= link_to 'All', admin_food_recipes_path%></li>
				<li><%= link_to 'New', new_admin_food_recipe_path%></li>
			</ul>

			<div class="collapsed menu" data-toggle="collapse" data-target="#sitelinks">
				<span>My Site</span>
				<i class="fa fa-chevron-right" aria-hidden="true"></i>
			</div>
			<ul id="sitelinks" class="collapse">
				<li><a href="/" target="_blank">Home page</a></li>
				<li><a href="/categories" target="_blank">Categories</a></li>
				<li><a href="food_recipes" target="_blank">Recipes</a></li>
				<li><a href="about" target="_blank">About</a></li>
				<li><a href="secrets" target="_blank">Kitchen Secrets</a></li>
			</ul>
		</div>
		<%= yield %>
	</div>
</body>
</html>